html, body {
	margin: 0
	width: 100%
	height: 100%
	display: flex
	justify-content: center
	align-items: center
	background: #000
}

#wrapper {
	position: relative
	width: 720px
	height: 570px
	flex: none
	transform: scaleX(1.65) scaleY(1.25)
}





#settings {
	display: none
	position absolute
	top: 0px
	left: 0px
	box-sizing: border-box
	width: 100vw
	min-height 100vh
	padding: 20px
	z-index: 100
	background: blue
	color: #ffffff
	font-family: 'Roboto Mono', monospace
	font-size: 14px
	line-height: 1.5
	// overflow-y: scroll
	
	.close-button {
		position absolute
		top: 10px
		right: 10px
		padding: 20px
		font-size: 40px
		line-height 20px
		cursor: pointer
	}

	#vizualizer {
		position absolute
		width: 50%
		height: 300px
		background: #fff
		border: 10px solid #fff
		right: 30px
		top: 200px
	}
	
	h1, h2, h3 {
		margin: 0 0 0 0
		font-weight normal
	}
	
	h1 {
		font-weight bold
	}
	
	section {
		margin: 20px 0 0 0
	}
	
	#data-title {
		margin: 0 0 10px 0 
		height: 20px
	}
	
	.button {
		display: inline-block
		margin: 0 10px 10px 0
		padding: 5px 10px
		border: 1px solid #fff
		cursor: pointer
		user-select: none
		&:active {
			background: #fff
			color: blue
		}
	}
	
	ul.sound-classes {
		margin: 20px 0 0 20px
		padding: 0
		list-style: none
		
		li {
			margin: 0 0 40px 0
			opacity: 0.6
			user-select none
			
			&:hover {
				opacity: 1
			}
			
			.label {
				font-size: 18px
				letter-spacing: 1px
				font-weight: bold
			}
			
			.counter {
				margin: 0 0 5px 0
			}
			
			.train {
				
			}
			
			.clear {
				cursor: pointer
				
				&:hover {
					text-decoration: underline
				}
			}
		}
	}
	

}